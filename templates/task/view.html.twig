{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-center mb-6">Détails de la tâche</h1>

    <div class="space-y-4">
        <div>
            <h2 class="text-lg font-semibold">Nom</h2>
            <p class="text-gray-700">{{ task.name }}</p>
        </div>

        <div>
            <h2 class="text-lg font-semibold">Description</h2>
            <p class="text-gray-700">{{ task.description }}</p>
        </div>

        <div>
            <h2 class="text-lg font-semibold">Date de création</h2>
            <p class="text-gray-700">{{ task.createdAt|date('d/m/Y H:i') }}</p>
        </div>
    </div>

    <div class="flex justify-end mt-6">
        <a href="{{ path('task_edit', { id: task.id }) }}" class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 mr-2">Modifier</a>
        <a href="{{ path('task_delete', { id: task.id }) }}" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Supprimer</a>
    </div>
</div>
{% endblock %}
